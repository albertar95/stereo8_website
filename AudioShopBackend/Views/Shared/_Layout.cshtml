    <script src="@Url.Content("~/vendor/datatables/dataTables.bootstrap4.min.js")"></script>

    <!-- Page level custom scripts -->
    <script src="@Url.Content("~/js/demo/datatables-demo.js")"></script>
    <script type="text/javascript">
        function UploadFile(typo, uploadId,resultDiv,resultMessage,RelateId,width,height)
        {
            var formData = new FormData();
            let files = document.getElementById(uploadId);
            for (let i = 0; i < files.files.length; i++) {
                formData.append('files' + i, files.files[i]);
            }
            formData.append('fileType', typo);
            formData.append('RelateId', RelateId);
            formData.append('ImageWidth', width);
            formData.append('ImageHeight', height);
            AdvanceInProgressBar(0);
            document.getElementById(resultMessage).setAttribute('hidden', 'hidden');
            $("#UploadModal").modal('show');
            AdvanceInProgressBar(10);
            $.ajax({
                url: '@Url.Action("UploadFile","Home")',
                type: 'post',
                datatype: 'json',
                data: formData,
                contentType: false,
                processData: false,
                success: function (result) {
                    if (result.success) {
                        window.setTimeout(function () {
                            AdvanceInProgressBar(100);
                        }, 1000);
                        document.getElementById(resultDiv).innerHTML = result.pics;

                    } else {
                        window.setTimeout(function () {
                            document.getElementById(resultMessage).removeAttribute('hidden');
                            document.getElementById(resultMessage).innerText = 'خطا در بارگذاری.لطفا مجدد امتحان کنید';
                        }, 3000);
                    }
                },
                error: function () {
                    window.setTimeout(function () {
                        document.getElementById(resultMessage).removeAttribute('hidden');
                        document.getElementById(resultMessage).innerText = 'خطا در بارگذاری.لطفا مجدد امتحان کنید';
                    }, 3000);
                }
            });
            window.setTimeout(function () {
                $("#UploadModal").modal('hide');
            }, 3000);
        }
        function AdvanceInProgressBar(newValue) {
            $("#UploadProgress").css('width', newValue + '%');
        }
        function btnRemoveFile(e) {
            e.preventDefault();
            $("#ModalcurrentId").val(e.target.id);
            $("#DeleteFileModal").modal('show');
        }

        function deleteFile() {
            var current = $("#ModalcurrentId").val();
            $.ajax({
                url: '@Url.Action("DeleteFile","Home")' + '?NidFile=' + current,
                type: 'post',
                datatype: 'json',
                success: function (result) {
                    if (result.success) {
                        var elem = document.getElementById(current);
                        elem.parentElement.remove();
                    }
                },
                error: function () { }
            });
            $("#DeleteFileModal").modal('hide');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
