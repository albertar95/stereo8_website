    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />
    @if (Model.Products.OrderByDescending(p => p.LastModified).FirstOrDefault().LastModified != null)
    {
        <meta property="og:updated_time" content="@Model.Products.OrderByDescending(p => p.LastModified).FirstOrDefault().LastModified" />
    }
    else
    {
        <meta property="og:updated_time" content="@Model.Products.OrderByDescending(p => p.LastModified).FirstOrDefault().CreateDate" />
    }
    @if (Model.Files.Any(p => p.RelateId == Model.Category.NidCategory && p.RelateType == 1))
    {
        <meta property="og:image" content="@Model.Files.FirstOrDefault(p => p.RelateId == Model.Category.NidCategory && p.RelateType == 1).FileUrl" />
        <meta name="twitter:image" content="@Model.Files.FirstOrDefault(p => p.RelateId == Model.Category.NidCategory && p.RelateType == 1).FileUrl" />
        <meta property="og:image:width" content="825" />
        <meta property="og:image:height" content="190" />
        <meta name="twitter:card" content="summary" />
    }else
    {
        <meta property="og:image" content="https://stereo8.ir/assets/img/logo/biglogo.webp" />
        <meta name="twitter:image" content="https://stereo8.ir/assets/img/logo/biglogo.webp" />
        <meta property="og:image:width" content="1920" />
        <meta property="og:image:height" content="1080" />
        <meta name="twitter:card" content="summary_large_image" />
    }
    <meta property="og:image:alt" content="@Model.Category.CategoryName" />
    <meta property="og:image:type" content="image/webp" />
    <meta name="twitter:title" content="@ViewData[" Title"]" />
    <meta name="twitter:description" content="@ViewData["Desc"]" />
}
