@section Scripts
{
    <script type="text/javascript">
        var Brands = []
        var Types = []
        var PageIndex = 1;
        var SortIndex = 0;
        if('@Model.TypeId' != '00000000-0000-0000-0000-000000000000')
            Types.push('@Model.TypeId')
        if ('@Model.BrandId' != '00000000-0000-0000-0000-000000000000')
            Brands.push('@Model.BrandId')
        function FilterProducts()
        {
            PageIndex = 1;
            $.ajax(
                {
                    url: '@Url.Action("CategoryFilter","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidCategory: '@Model.Category.NidCategory', MinPrice: $("#amountMinVal").val(), MaxPrice: $("#amountMaxVal").val(), TypeId: Types.join(','), BrandId: Brands.join(','), Sorttype: SortIndex },
                    success: function (result) {
                        if (result.success)
                        {
                            $("#prdWrapper").html(result.html.result);
                            $(".btn-grid-3").removeClass('active');
                            $(".btn-grid-4").removeClass('active');
                            $(".btn-list").addClass('active');
                            $("#prdCount").text(result.countMessage)
                        }
                    },
                    error: function () { }
                });
        }
        function CheckboxTrigger(currentId, typo) {
            if (typo == 0) //type
            {
                if (Types.indexOf(currentId) >= 0) {
                    const inx = Types.indexOf(currentId)
                    Types.splice(inx, 1)
                } else {
                    Types.push(currentId)
                }
            }
            if (typo == 1) //brand
            {
                if (Brands.indexOf(currentId) >= 0) {
                    const inx2 = Brands.indexOf(currentId)
                    Brands.splice(inx2, 1)
                } else {
                    Brands.push(currentId)
                }
            }
            FilterProducts();
        }
        function Pagination(index)
        {
            if(index == 0)
                PageIndex++;
                else if(index == -1)
                PageIndex--;
                else
                PageIndex = index;
            $.ajax(
                {
                    url: '@Url.Action("CategoryPagination","Home")',
                    type: 'post',
                    datatype: 'json',
                    data: { NidCategory: '@Model.Category.NidCategory', MinPrice: $("#amountMinVal").val(), MaxPrice: $("#amountMaxVal").val(), TypeId: Types.join(','), BrandId: Brands.join(','), PageNumber: PageIndex, Sorttype: SortIndex },
                    success: function (result) {
                        if (result.success) {
                            $("#prdWrapper").html(result.html.result);
                            $(".btn-grid-3").removeClass('active');
                            $(".btn-grid-4").removeClass('active');
                            $(".btn-list").addClass('active');
                            $("#prdCount").text(result.countMessage)
                        }
                    },
                    error: function () { }
                });

        }
        $(function()
        {
            $("#SortBy").niceSelect();
            $("#SortBy").change(function() {
                SortIndex = $("#SortBy").find(':selected').val();
                FilterProducts();
            });
        });
    </script>
}