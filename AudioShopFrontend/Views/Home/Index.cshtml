@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model AudioShopFrontend.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "صفحه اصلی";
    ViewData["Desc"] = "وب سایت استریو 8 - فروشگاه محصولات صوتی و تصویری ماشین";
    ViewData["CUrl"] = string.Format("https://stereo8.ir{0}", Url.Action("Index", "Home"));
    ViewData["Typo"] = "website";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />
    @if (Model.SpecialProducts.Any() && Model.SpecialProducts.OrderByDescending(p => p.LastModified).FirstOrDefault().LastModified != null)
    {
        <meta property="og:updated_time" content="@Model.SpecialProducts.OrderByDescending(p => p.LastModified).FirstOrDefault().LastModified" />
    }
    else
    {
        <meta property="og:updated_time" content="2022-12-09T22:28:56+03:30" />
    }
    <meta property="og:image" content="https://stereo8.ir/assets/img/logo/biglogo.webp" />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:image:alt" content="وبسایت استریو 8" />
    <meta property="og:image:type" content="image/webp" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData[" Title"]" />
    <meta name="twitter:description" content="@ViewData["Desc"]" />
    <meta name="twitter:image" content="https://stereo8.ir/assets/img/logo/biglogo.webp" />
}
