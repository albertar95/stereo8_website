                            <li>
                                <a class="active" data-toggle="tab" href="@string.Format("#{0}",cat)" role="tab" aria-controls="@cat" aria-selected="true">@Model.SidebarCategories.FirstOrDefault(p => p.NidCategory == cat).CategoryName</a>
                            </li>
