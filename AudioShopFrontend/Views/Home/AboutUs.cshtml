@model IEnumerable<AudioShopFrontend.Models.File>
@{
    ViewData["Title"] = "درباره ما";
    ViewData["Desc"] = "درباره ما - وب سایت استریو 8";
    ViewData["CUrl"] = string.Format("https://stereo8.ir{0}", Url.Action("AboutUs", "Home"));
    ViewData["Typo"] = "website";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
    {
    <meta name="robots" content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" />
    @if (Model.Any())
    {
        <meta property="og:updated_time" content="@Model.FirstOrDefault().CreateDate" />
    }
    else
    {
        <meta property="og:updated_time" content="2022-12-09T22:28:56"  />
    }
    @if (Model.Any(p => p.RelateType == 25))
    {
        <meta property="og:image" content="@Model.FirstOrDefault(p => p.RelateType == 25).FileUrl" />
        <meta name="twitter:image" content="@Model.FirstOrDefault(p => p.RelateType == 25).FileUrl" />
    }else
    {
        <meta property="og:image" content="https://stereo8.ir/assets/img/about/about1.jpg" />
        <meta name="twitter:image" content="https://stereo8.ir/assets/img/about/about1.jpg" />
    }
    <meta property="og:image:width" content="1170" />
    <meta property="og:image:height" content="610" />
    <meta property="og:image:alt" content="وب سایت استریو 8" />
    <meta property="og:image:type" content="image/webp" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"]" />
    <meta name="twitter:description" content="@ViewData[" Desc"]" />
}
<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="index.html">صفحه اصلی</a></li>
                        <li>درباره ما</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--about section area -->
<div class="about_section mt-32">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="about_thumb">
                    @if (Model.Any(p => p.RelateType == 25))
                    {
                        <img src="@Model.FirstOrDefault(p => p.RelateType == 25).FileUrl" alt="وب سایت استریو 8">
                    }
                    else
                    {
                        <img src="assets/img/about/about1.jpg" alt="وب سایت استریو 8">
                    }
                </div>

                <div class="about_content">
                    <h1>به فروشگاه ما خوش آمدید!</h1>
                    <p>هدف ما ارائه بهترین خدمات بصورت آنلاین و ارسال با ضمانت و ارائه بهترین کیفیت و بهترین قیمت است!</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!--about section end-->
<!--chose us area start-->
<div class="choseus_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="chose_title">
                    <h1>چرا ما را انتخاب میکنند؟</h1>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_chose">
                    <div class="chose_icone">
                        <img src="assets/img/about/About_icon1.jpg" alt="تخفیف ویژه">
                    </div>
                    <div class="chose_content">
                        <h3>پیشنهاد های جذاب</h3>
                        <p>تخفیف های ویژه روی محصولات در دوره های زمانی مختلف</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_chose">
                    <div class="chose_icone">
                        <img src="assets/img/about/About_icon2.jpg" alt="ضمانت محصول">
                    </div>
                    <div class="chose_content">
                        <h3>ضمانت برگشت پول</h3>
                        <p>در صورت وجود مشکل یا عدم رضایت از محصول</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_chose">
                    <div class="chose_icone">
                        <img src="assets/img/about/About_icon3.jpg" alt="پشتیبانی آنلاین">
                    </div>
                    <div class="chose_content">
                        <h3>پشتیبانی آنلاین</h3>
                        <p>سوالات خود را با ما درمیان بگذارید.در تمامی روزهای کاری هفته</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--chose us area end-->
<!--services img area-->
<div class="about_gallery_section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="single_gallery_section">
                    <div class="gallery_thumb">
                        @if (Model.Any(p => p.RelateType == 28))
                        {
                            <img src="@Model.FirstOrDefault(p => p.RelateType == 28).FileUrl" alt="درباره ما">
                        }
                        else
                        {
                            <img src="img/service/services1.jpg" alt="درباره ما">
                        }
                    </div>
                    <div class="about_gallery_content">
                        <h3>ما چه کاری انجام می دهیم؟</h3>
                        <p>تیم @AudioShopFrontend.Helpers.Commons.GetAppName(true) در تلاش جهت ارائه محصولات با کیفیت در زمینه صوتی و تصویری ماشین می باشد</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_gallery_section">
                    <div class="gallery_thumb">
                        @if (Model.Any(p => p.RelateType == 27))
                        {
                            <img src="@Model.FirstOrDefault(p => p.RelateType == 27).FileUrl" alt="وبلاگ استریو 8">
                        }
                        else
                        {
                            <img src="img/service/services2.jpg" alt="وبلاگ استریو 8">
                        }
                    </div>
                    <div class="about_gallery_content">
                        <h3>وبلاگ تخصصی</h3>
                        <p>از آخرین اخبار و موضوعات درباره سیستم های صوتی ماشین مطلع شوید</p>

                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="single_gallery_section">
                    <div class="gallery_thumb">
                        @if (Model.Any(p => p.RelateType == 26))
                        {
                            <img src="@Model.FirstOrDefault(p => p.RelateType == 26).FileUrl" alt="فضای مجازی">
                        }
                        else
                        {
                            <img src="img/service/services3.jpg" alt="فضای مجازی">
                        }
                    </div>
                    <div class="about_gallery_content">
                        <h3>فضای مجازی</h3>
                        <p>ما را در فضای مجازی دنبال کنید و پست ها را با دوستان خود به اشتراک بگذارید</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--services img end-->
